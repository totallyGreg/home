// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "context_servers": {
    "Homebrew": {
      "source": "custom",
      "command": "brew",
      "args": ["mcp-server"]
    },
    "Docker MCP Toolkit": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "alpine/socat",
        "STDIO",
        "TCP:host.docker.internal:8811"
      ],
      "env": null,
      "settings": {}
    }
  },
  "ssh_connections": [
    {
      "host": "ds5",
      "projects": [
        {
          "paths": ["/Users/totally/Notes"]
        },
        {
          "paths": ["/Users/totally/Projects"]
        },
        {
          "paths": ["/Users/totally/Projects/merge_audiobook"]
        }
      ]
    }
  ],
  "icon_theme": "Colored Zed Icons Theme Light",
  "auto_update_extensions": {
    "swift": false,
    "markdown-oxide": false
  },
  //from https://creativewithin.medium.com/how-i-got-zed-editor-working-with-swift-projects-60ea78d4165e
  "languages": {
    "Swift": {
      "enable_language_server": true,
      "language_servers": ["sourcekit-lsp"],
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "YAML": {
      "formatter": "language_server",
      "prettier": {
        "bracketSpacing": false
      },
      "format_on_save": "on"
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": true,
          "format": {
            "singleQuote": true,
            "bracketSpacing": false
          },
          "schemas": {
            "http://json.schemastore.org/composer": ["/*"],
            "../relative/path/schema.json": ["/config*.yaml"]
          }
        }
      }
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "language_models": {
    "lmstudio": {
      "api_url": "http://10.0.0.5:1234/api/v0"
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Solarized Dark"
  },
  "agent": {
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true,
    "model_parameters": [
      {
        "temperature": 0.2
      }
    ],
    "profiles": {
      "code-buddy": {
        "name": "Code Buddy",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      },
      "mother-may-i": {
        "name": "Mother May I",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "ollama",
      "model": "gpt-oss:20b"
    },
    "provider": null
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "FiraMono Nerd Font Mono",
  "tabs": {
    "close_position": "right",
    "git_status": false
  }
}

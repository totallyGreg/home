# This tmux statusbar config was created by tmuxline.vim
# on Mon, 23 Dec 2019

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour8,bg=colour11"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour4"
set -g status-style "none,bg=colour0"
set -g message-style "fg=colour8,bg=colour11"
set -g pane-border-style "fg=colour11"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour14,bg=colour0"
set -g status-left "#[fg=colour8,bg=colour4] #S #[fg=colour4,bg=colour0,nobold,nounderscore,noitalics]ÓÇ∞"
set -g status-right "#{prefix_highlight}#[fg=colour8,bg=colour4]#[fg=colour11,bg=colour0,nobold,nounderscore,noitalics]ÓÇ≤#[fg=colour8,bg=colour11] %Y-%m-%d ÓÇ≥ %H:%M #[fg=colour14,bg=colour11,nobold,nounderscore,noitalics]ÓÇ≤#[fg=colour8,bg=colour14] #h "
setw -g window-status-format "#[fg=colour14,bg=colour0] #I ÓÇ±#[fg=colour14,bg=colour0] #W#F "
setw -g window-status-current-format "#[fg=colour0,bg=colour11,nobold,nounderscore,noitalics]ÓÇ∞#[fg=colour8,bg=colour11] #I ÓÇ±#[fg=colour8,bg=colour11] #{?window_zoomed_flag, üîç,}#W#F #[fg=colour11,bg=colour0,nobold,nounderscore,noitalics]ÓÇ∞"
